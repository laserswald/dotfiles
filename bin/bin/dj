#!/bin/sh
# dj: manage media playback

mpv_send_key () {
    wid=`xdotool search --class mpv`
    xdotool key --window $wid $1
}

cmd=$1

case $cmd in
	notify-send 'DJ' "$cmd"
    toggle) 
        if xdotool search --class mpv >/dev/null; then
	        mpv_send_key 'p'
        elif pgrep mpd >/dev/null; then
	        mpc toggle
	    fi
    ;;
    next) 
        if xdotool search --class mpv >/dev/null; then
	        mpv_send_key 'greater'
        elif pgrep mpd >/dev/null; then
	        mpc next
        fi
    ;;
    prev) 
        if xdotool search --class mpv >/dev/null; then
	        mpv_send_key 'less'
        elif pgrep mpd >/dev/null; then
	        mpc prev
        fi
    ;;
    stop)
        if xdotool search --class mpv >/dev/null; then
	        mpv_send_key 'q'
        elif pgrep mpd >/dev/null; then
	        mpc stop
        fi
    ;;
esac
